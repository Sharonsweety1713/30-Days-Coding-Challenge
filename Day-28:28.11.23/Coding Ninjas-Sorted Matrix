import java.util.* ;
import java.io.*; 
import java.util.List;

public class Solution {
	
	public static List<Integer> sortedMatrix(int[][] mat, int n) {
		// Write your code here.
		List<Integer>arr=new ArrayList<>();
		for(int i=0;i<n;i++)
		{
			for(int j=0;j<n;j++)
			{
				arr.add(mat[i][j]);
			}
		}
		Collections.sort(arr);

		return arr;
	}

}
