import java.util.*;
public class Solution {
    public static int[] Klargest(int[] arr, int k, int n) {
        // Write your code here
           Arrays.sort(arr);
           int j=0;
           int ans[]=new int[k];
           for(int i=n-k;i<n;i++)
           {
               
               ans[j]=arr[i];
               j++;
           }
               return ans;
    }
}
